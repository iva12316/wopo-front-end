{{title "Нулиране на парола"}}

{{#auth-form model=model
  form-name="Нулиране на парола"
  form-action-name="Нулирайте"
  disableForm=disableForm
  alert=alert
  formAction=(action "resetPassword")
  as |section|
}}
  {{#if section.isContent}}
    {{validated-input model=model
      label="Нова парола"
      value=password
      valuePath='password'
      type="password"
      placeholder='Напишите новата Ви парола'
      disabled=disableForm
    }}
  {{/if}}
{{/auth-form}}
