{{title "Настройки на портфолиото"}}
<div class="page-title">
  <h2 class="float-left">Настройки на портфолиото</h2>
</div>

{{#if showAlert}}
  <div class="alert alert-{{alert.type}}" role="alert">
    {{alert.content}}
  </div>
{{/if}}

<section class="form-section">
  <form {{action "submitForm" on="submit"}}>
    <div class="form-group {{if (v-get this "model.title" "isValid") "has-success" (if (not-eq model.title null) "has-danger")}}">
      <label for="title">Заглавие</label>
      {{input
        type="text"
        id="title"
        class="form-control"
        placeholder="Напишете заглавието на портфолиото Ви"
        value=model.title
      }}

      <div class="form-control-feedback">
        {{#if (if (not-eq model.title null) (v-get this "model.title" "isInvalid"))}}
          {{v-get this "model.title" "message"}}
        {{/if}}
      </div>
    </div>
    <div class="form-group">
      <label for="description">Описание</label>
      {{textarea
        class="form-control"
        id="description"
        placeholder="Напишете описанието на портфолиото Ви"
        value=model.description
      }}
    </div>
    <div class="form-group">
      <label for="keywords">Ключови думи</label>
      {{keywords-input
        inputId="keywords"
        placeholder="Напишете ключовите думи на портфолиото Ви"
        value=model.keywords
      }}
    </div>
    <div class="form-group {{if (v-get this "model.job_offers" "isInvalid") (if (not-eq model.job_offers null) "has-danger")}}">
      <label class="custom-control custom-checkbox">
        {{input
          class="custom-control-input"
          type="checkbox"
          checked=model.job_offers
        }}
        <span class="custom-control-indicator"></span>
        <span class="custom-control-description">Получаване на предложения за работа от работодателите в wopo</span>
      </label>
      <div class="form-control-feedback">
        {{#if (if (not-eq model.job_offers null) (v-get this "model.job_offers" "isInvalid"))}}
            {{v-get this "model.job_offers" "message"}}
        {{/if}}
      </div>
    </div>
    <div class="form-bottom">
      <button role="submit" class="btn btn-success btn-form float-right">Запази</button>
    </div>
  </form>
</section>
