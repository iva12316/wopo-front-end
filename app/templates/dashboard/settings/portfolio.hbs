<section class="form-section">
  <div class="section-title">
    <h4 class="float-xs-left">Изтриване на портфолиото</h4>
  </div>

  <button type="button" class="btn btn-danger btn-form" data-toggle="modal" data-target="#deletePortfolio">
    Изтрий
  </button>

  <div class="modal fade" id="deletePortfolio" tabindex="-1" role="dialog" aria-labelledby="deletePortfolioLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="deletePortfolioLabel">Наистина ли искате да изтриете портфолиото си?</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Отказ</button>
          <button type="button" class="btn btn-danger" {{action "delete"}}>Изтрий</button>
        </div>
      </div>
    </div>
  </div>
</section>
