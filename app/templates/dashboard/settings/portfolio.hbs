{{title "Настройки на портфолиото"}}
<div class="page-title">
  <h2 class="pull-xs-left">Настройки на портфолиото</h2>
</div>
<section class="settings">
  <div class="section-title">
    <h4 class="pull-xs-left">Главни</h4>
  </div>
  <div class="form-group">
    <label for="title">Заглавие</label>
    <input type="text" class="form-control" id="title" placeholder="Моето страхотно заглавие...">
  </div>
  <div class="form-group">
    <label for="description">Описание</label>
    <textarea class="form-control" id="description" rows="3" placeholder="Моето страхотно описание..."></textarea>
  </div>
  <div class="form-group">
    <label for="keywords">Ключови думи</label>
    <input type="text" class="form-control" id="keywords" placeholder="Професионално, портфолио, работа">
  </div>
  <div class="form-group">
    <div class="form-check">
      <label for="optionsRadios">Получаване на предложения за работа от работодателите в wopo</label>
      <label class="form-check-label">
        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="option1" checked>
        Да
      </label>
    </div>
    <div class="form-check">
      <label class="form-check-label">
        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios2" value="option2">
        Не
      </label>
    </div>
  </div>
</section>
<section class="settings">
  <div class="section-title">
    <h4 class="pull-xs-left">Абонаменти</h4>
  </div>
  <div class="form-group">
    <label for="email">E-mail абонамента система</label>
  </div>
  <div class="form-group">
    <label for="email">RSS абонамента система</label>
  </div>
</section>
<section class="settings">
  <div class="section-title">
    <h4 class="pull-xs-left">Публикуване</h4>
  </div>
  <div class="form-group">
    <label for="wopo">Wopo</label>
    <input type="text" class="form-control" id="wopo" placeholder="example.wopo.io">
  </div>
  <div class="form-group">
    <label for="github">Github</label>
    <input type="text" class="form-control" id="github" placeholder="example.github.io">
  </div>
  <div class="form-group">
    <label for="hosting">Собствен хостинг</label>
    <input type="text" class="form-control" id="hosting" placeholder="example.com">
  </div>
</section>
<section class="settings">
  <div class="section-title">
    <h4 class="pull-xs-left">Изтегляне</h4>
  </div>
  <div class="form-group">
    <div class="form-check">
      <label for="optionsRadios">Изберете формат на изтегляне</label>
      <label class="form-check-label">
        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="option1" checked>
        PDF
      </label>
    </div>
    <div class="form-check">
      <label class="form-check-label">
        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios2" value="option2">
        Word
      </label>
    </div>
  </div>
</section>
<section class="settings">
  <div class="section-title">
    <h4 class="pull-xs-left">Изтриване на портфолиото</h4>
  </div>
  <div class="btn btn-danger">
    Изтриване
  </div>
</section>
<div class="btn btn-success pull-xs-right">Запазване</div>