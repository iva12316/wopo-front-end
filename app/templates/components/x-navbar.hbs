<nav class="navbar navbar-fixed-top navbar-light bg-faded">
  {{#link-to "index" class="navbar-brand"}}
    {{logo-symbol class="logo-symbol"}}
    {{logo-text class="logo-text"}}
  {{/link-to}}

  <ul class="nav navbar-nav float-sm-right">
    {{#if dashboard}}
      <li class="nav-item button">
        <a href="{{portfolioData.domain}}" target="_blank" class="btn btn-primary">Моето портфолио</a>
      </li>
      <li class="dropdown nav-item notifications-desktop">
        <button class="btn btn-link dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          {{fa-icon "bell"}}
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
          <div class="ps-content">
            {{notifications-container}}
          </div>
        </div>
      </li>
    {{/if}}
    <li class="dropdown nav-item options">
      <div class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <img src="{{profilePic}}" alt="Ivana Velikova" class="dropdown-img">
        {{fa-icon "caret-down"}}
      </div>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
        {{#if dashboard}}
          <h6 class="dropdown-header">Настройки</h6>
          {{#link-to "dashboard.settings.portfolio" class="dropdown-item"}}
            Портфолио
          {{/link-to}}
          {{#link-to "dashboard.settings.profile" class="dropdown-item"}}
            Профил
          {{/link-to}}
          <div class="dropdown-divider"></div>
        {{/if}}
        <button class="dropdown-item" {{action 'logout'}}>
          {{fa-icon "sign-out"}}
          <span>Изход</span>
        </button>
      </div>
    </li>
  </ul>
  {{#if dashboard}}
    <ul class="nav navbar-nav">
      <li class="nav-item">  
        {{#link-to "dashboard.index" class="nav-link"}}
          {{fa-icon "dashboard"}}
          <span class="nav-link-text">Табло</span>
        {{/link-to}}
      </li>    
      <li class="nav-item">  
        {{#link-to "dashboard.content.articles" current-when="dashboard.content" class="nav-link"}}
          {{fa-icon "pencil"}}
          <span class="nav-link-text">Съдържание</span>
        {{/link-to}}
      </li>
      <li class="nav-item">
        {{#link-to "dashboard.theme.index" class="nav-link"}}
          {{fa-icon "paint-brush"}}
          <span class="nav-link-text">Тема</span>
        {{/link-to}}
      </li>
      <li class="nav-item notifications-mobile">
        {{#link-to "dashboard.notifications" class="nav-link"}}
          {{fa-icon "bell"}}
        {{/link-to}}
      </li>
      <li class="nav-item settings-mobile">
        {{#link-to "dashboard.settings.portfolio" current-when="dashboard.settings" class="nav-link"}}
          {{fa-icon "gear"}}
        {{/link-to}}
      </li>
    </ul>
  {{/if}}
</nav>
