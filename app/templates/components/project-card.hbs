<div class="col-xl-4 col-md-6">
  <div class="card card-block">
    <div class="card-title">
      <h4 title="{{data.name}}" class="text-xs-center">{{data.name}}</h4>
    </div>
    <h6 title="{{date}}" class="card-subtitle text-muted">{{date}}</h6>
    <div class="card-img">
      <img class="img-fluid m-x-auto d-block" src="{{data.image_url}}" alt="">
    </div>
    <button class="btn btn-link card-link" data-toggle="modal" data-target=".modal.editProjects" {{action edit section index}}>Редактирай</button>
    <button class="btn btn-link card-link" {{action delete section index}}>Изтрий</button>
  </div>
</div>