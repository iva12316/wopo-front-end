{{#x-modal
  modalTarget="addTheme"
  modalTitle="Нова тема"
  modalVisible=modalVisible
  alert=alert
}}
  <form {{action "submitForm" on="submit"}}>
    <div class="modal-body">
      {{#if (and custom (and (not uploading) (not secondStep)))}}
        <div class="alert alert-info" role="alert">
          Качените теми от Вас <strong>не</strong> се проверяват от екипа на <strong>wopo</strong>. Ако не знаете какво правите, моля използвайте <strong>Магазина за теми</strong>.
        </div>
      {{/if}}

      {{#if showAlert}}
        <div class="alert alert-{{alert.type}}" role="alert">
          {{alert.content}}
        </div>
      {{/if}}

      <div class="dropzone"></div>

      {{#if uploading}}
        <div class="progress">
          <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
        </div>
      {{/if}}

      {{#if secondStep}}
        <div class="form-group {{if (v-get this "data.name" "isValid") "has-success" "has-danger"}}">
          <label for="addThemeName">Име</label>
          {{input
            type="text"
            name="name"
            class="form-control"
            id="addThemeName"
            placeholder="Напиши името на темата"
            value=data.name
            autocomplete="off"
          }}

          <div class="form-control-feedback">
            {{#if (v-get this "data.name" "isInvalid")}}
                {{v-get this "data.name" "message"}}
            {{/if}}
          </div>
        </div>

        <div class="form-group {{if (v-get this "data.description" "isValid") "has-success" "has-danger"}}">
          <label for="addThemeDescription">Описание</label>
          {{text-editor
            editorId="addThemeDescription"
            placeholder="Напишете описанието на темата"
            value=data.description
            updateValue=modalVisible
          }}

          <div class="form-control-feedback">
            {{#if (v-get this "data.description" "isInvalid")}}
                {{v-get this "data.description" "message"}}
            {{/if}}
          </div>
        </div>
      {{/if}}
    </div>
    {{#if secondStep}}
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Затвори</button>
        <button type="submit" class="btn btn-primary" disabled={{disableSubmit}}>Добави</button>
      </div>
    {{/if}}
  </form>
{{/x-modal}}
