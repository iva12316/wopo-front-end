<div class="modal fade {{modalTarget}}" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="section-title">
        <h2 class="pull-xs-left">{{modalTitle}}</h2>
      </div>
      <form {{action "submitForm" on="submit"}}>
        <div class="form-group">
          <label for="{{modalTarget}}Title">Име</label>
          {{input
            type="text"
            name="title"
            class="form-control"
            id=(concat modalTarget "Title")
            placeholder="Photoshop..."
            value=data.name
          }}
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">{{modalActionName}}</button>
        </div>
      </form>
    </div>
  </div>
</div>
