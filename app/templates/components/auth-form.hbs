<div class="center-wrapper center-wrapper--auth">
  <section class="center-content center-content--auth">
    {{#link-to "index" class="auth-logo"}}
      {{logo-symbol class="logo-symbol"}}
      {{logo-text class="logo-text"}}
    {{/link-to}}
    <form {{action "submitForm" on="submit"}} class="auth-form">
      <h2 class="text-xs-center">{{form-name}}</h2>

      {{#if showAlert}}
        <div class="alert alert-{{alert.type}}" role="alert">
          {{alert.content}}
        </div>
      {{/if}}
      
      {{yield content}}
      
      <button role="submit" class="btn btn-success btn-block" disabled={{disableForm}}>{{form-action-name}}</button>
    </form>
    <div class="auth-bottom">
      {{yield bottom}}
    </div>
  </section>
</div>
