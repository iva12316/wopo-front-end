{{title "Вход"}}

{{#auth-form model=model
  formName="Вход"
  formActionName="Вход"
  disableForm=disableForm
  alert=alert
  formAction=(action "login")
  as |section|
}}
  {{#if section.isContent}}
    {{validated-input model=model
      label="E-mail"
      value=email
      valuePath="email"
      type="email"
      placeholder='Напишите е-mail адреса си'
      autocomplete="off"
      disabled=disableForm
    }}

    {{validated-input model=model
      label="Парола"
      value=password
      valuePath='password'
      type="password"
      placeholder='Напишите паролата си'
      disabled=disableForm
    }}
  {{else if section.isBottom}}
    <p>Нямате профил? {{#link-to "registration"}}Регистрация{{/link-to}}</p>
    {{#link-to "forgot-password"}}Забравена парола?{{/link-to}}
  {{/if}}
{{/auth-form}}