{{sidebar-nav}}
<div class="page-wrapper">
  <div class="container">
    <div class="page-title">
      <h2 class="pull-xs-left">Нова статия</h2>
    </div>
    <div class="form-group">
      <label for="title">Заглавие</label>
      <input type="text" name="title" class="form-control" id="title" placeholder="Моето страхотно заглавие..">
    </div>
    <div class="form-group">
      <label for="cover-image">Снимка</label>
      <input type="file" class="form-control-file" id="cover-image" aria-describedby="fileHelp">
      <small id="fileHelp" class="form-text text-muted">Снимката ще се използва като корица на статията.</small>
    </div>
    <div class="form-group">
      <label for="content">Съдържание</label>
      {{text-editor}}
    </div>
    <div class="form-group">
      <label for="tags">Тагове</label>
      <input type="text" name="tags" class="form-control" id="tags" placeholder="Отделяйте таговете със запетаи. Пример: рисунка, карикатура, изобразително изкуство">
    </div>
    <div class="form-group">
      <button name="publish" class="btn btn-primary">Публикувай</button>
      <button name="save" class="btn btn-outline-primary">Запази</button>
    </div>
  </div>
</div>
